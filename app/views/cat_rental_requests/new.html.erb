<h1>Create a rental request</h1>

<form action="<%= cat_rental_requests_url %>" method="POST">
  <label for="select-cat-id">Rental Cat</label><br>
  <select name="cat_rental_request[cat_id]" id="select-cat-id">
    <option>Select a cat</option>
    <% @cats.each do |cat| %>
      <% selected = @passed_cat_id == cat.id ? "selected='selected'" : "" %>
      <option value="<%= cat.id %>" <%= selected %>><%= cat.name %></option>
    <% end %>
  </select>
  <br><br>

  <label for="cat-rental-request-start-date">Start Date</label><br>
  <input type="date"
         name="cat_rental_request[start_date]"
         value=""
         id="cat-rental-request-start-date">

  <br><br>

  <label for="cat-rental-request-end-date">End Date</label><br>
  <input type="date"
         name="cat_rental_request[end_date]"
         value=""
         id="cat-rental-request-end-date">
  <br><br>

  <input type="submit" value="Submit Request!">
</form>
